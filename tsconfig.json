{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "rootDir": "./src"
  },
  "include": ["src/**/*", "src/templates/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
